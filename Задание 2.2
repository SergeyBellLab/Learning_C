#include <stdio.h>
#include <stdlib.h>

/* Главная функция программы - точка входа */
int main() {
    /* Открытие файла input.txt в режиме чтения ('r') */
    FILE *file = fopen("input.txt", "r");

    /* Проверка успешности открытия файла */
    if (file == NULL) {
        printf("Error opening file\n");  // Вывод сообщения об ошибке
        return 1;                       // Завершение программы с кодом ошибки
    }

    int c;              // Переменная для хранения текущего прочитанного символа
    int count = 0;      // Счетчик символов (начиная с 0)

    /* Цикл чтения файла посимвольно до конца файла (EOF) */
    while ((c = fgetc(file)) != EOF) {
        count++;                            // Увеличиваем счетчик на 1 для каждого символа
        if (count % 3 == 0) {               // Проверяем, делится ли номер символа на 3 без остатка
            putchar(c);                     // Выводим символ на экран
        }
    }

    fclose(file);       // Закрытие файла после обработки
    return 0;           // Завершение программы успешно (код 0)
}


#include <stdio.h>

int main() {
    // Объявляем символьный массив для хранения предложения (максимум 255 символов + '\0')
    char str[256];

    // Выводим приглашение для ввода предложения
    printf("Введите предложение: ");

    // Считываем строку с помощью fgets, чтобы захватить пробелы и избежать переполнения
    fgets(str, sizeof(str), stdin);

    // Удаляем символ новой строки '\n' в конце строки, если он есть
    int len = 0;
    while (str[len] != '\0') {
        if (str[len] == '\n') {
            str[len] = '\0';  // Заменяем '\n' на конец строки
            break;
        }
        len++;
    }

    // Инициализируем счетчики: total_words - общее количество слов, vowel_words - слова с гласной
    int total_words = 0;
    int vowel_words = 0;

    // Переменная для отслеживания текущего состояния (в слове или нет)
    int in_word = 0;

    // Проходим по всей строке посимвольно
    for (int i = 0; str[i] != '\0'; i++) {
        char c = str[i];

        // Проверяем, является ли символ буквой (a-z, A-Z)
        if ((c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z')) {
            // Если мы только что вошли в слово (были вне слова)
            if (in_word == 0) {
                total_words++;  // Увеличиваем счетчик слов

                // Проверяем, является ли первая буква слова гласной (a,e,i,o,u,A,E,I,O,U)
                if ((c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u' ||
                     c == 'A' || c == 'E' || c == 'I' || c == 'O' || c == 'U')) {
                    vowel_words++;  // Увеличиваем счетчик слов с гласной
                }
                in_word = 1;  // Теперь мы внутри слова
            }
        } else {
            // Символ не буква (пробел, знак препинания) - выходим из слова
            in_word = 0;
        }
    }

    // Выводим результаты подсчета
    printf("Общее количество слов: %d\n", total_words);
    printf("Слов, начинающихся с гласной: %d\n", vowel_words);

    return 0;
}


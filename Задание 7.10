#include <stdio.h>
#include <string.h>

#define MAX_LEN 100

int main() {
    char str1[MAX_LEN], str2[MAX_LEN], str3[MAX_LEN];
    char res1[MAX_LEN*3], res2[MAX_LEN*3], res3[MAX_LEN*3], res4[MAX_LEN*3], res5[MAX_LEN*3], res6[MAX_LEN*3];

    // Ввод трёх строк
    printf("Введите первую строку: ");
    gets(str1);

    printf("Введите вторую строку: ");
    gets(str2);

    printf("Введите третью строку: ");
    gets(str3);

    printf("\nИсходные строки:\n");
    printf("str1: %s\n", str1);
    printf("str2: %s\n", str2);
    printf("str3: %s\n", str3);

    // 6 способов склейки с помощью strcpy и strcat
    // strcpy(str_1, str_2) - Копирование строки str_2 в строку str_1
    // strcat(str_1, str_2) - Дописать строку str_2 в строку str_1
    strcpy(res1, str1); strcat(res1, str2); strcat(res1, str3);  // 1+2+3
    strcpy(res2, str1); strcat(res2, str3); strcat(res2, str2);  // 1+3+2
    strcpy(res3, str2); strcat(res3, str1); strcat(res3, str3);  // 2+1+3
    strcpy(res4, str2); strcat(res4, str3); strcat(res4, str1);  // 2+3+1
    strcpy(res5, str3); strcat(res5, str1); strcat(res5, str2);  // 3+1+2
    strcpy(res6, str3); strcat(res6, str2); strcat(res6, str1);  // 3+2+1

    printf("\nПолученные строки:\n");
    printf("1+2+3: %s\n", res1);
    printf("1+3+2: %s\n", res2);
    printf("2+1+3: %s\n", res3);
    printf("2+3+1: %s\n", res4);
    printf("3+1+2: %s\n", res5);
    printf("3+2+1: %s\n", res6);

    return 0;
}


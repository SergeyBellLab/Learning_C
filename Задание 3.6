#include <stdio.h>

// Функция для вывода двумерного массива на экран
void printArray(int rows, int cols, int arr[rows][cols]) {
    for (int i = 0; i < rows; i++) {        // Перебираем все строки
        for (int j = 0; j < cols; j++) {    // Перебираем все столбцы в строке
            printf("%4d ", arr[i][j]);      // Выводим элемент с выравниванием
        }
        printf("\n");                       // Переход на новую строку после строки
    }
    printf("\n");                           // Пустая строка между выводами
}

// Функция для обратной перестановки первой половины строк
void reverseFirstHalf(int rows, int cols, int arr[rows][cols]) {
    int half = cols / 2;                    // Вычисляем размер первой половины (целое деление)

    for (int i = 0; i < rows; i++) {        // Перебираем все строки массива
        for (int j = 0; j < half / 2; j++) { // Перебираем первую четверть для перестановки
            int temp = arr[i][j];           // Сохраняем элемент в временную переменную
            arr[i][j] = arr[i][half - 1 - j]; // Меняем местами с симметричным из конца половины
            arr[i][half - 1 - j] = temp;     // Восстанавливаем сохраненный элемент
        }
    }
}


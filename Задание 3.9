#include <stdio.h>      // Подключаем библиотеку для ввода-вывода

#define ROWS 4             // Количество строк в массиве
#define COLS 5             // Количество столбцов в массиве

int main() {
    int arr[ROWS][COLS] = {                    // Объявляем и инициализируем двумерный массив
        {5,  2, 8, 1, 9},                    // Первая строка
        {3,  7, 4, 6, 2},                    // Вторая строка
        {1, 10, 3, 5, 8},                    // Третья строка
        {9,  4, 6, 2, 7}                     // Четвертая строка
    };

    printf("Массив ДО сортировки:\n");         // Выводим заголовок для исходного массива
    for(int i = 0; i < ROWS; i++) {            // Проходим по всем строкам
        for(int j = 0; j < COLS; j++) {        // Проходим по всем столбцам в строке
            printf("%4d ", arr[i][j]);         // Выводим элемент массива с выравниванием
        }
        printf("\n");                          // Переход на новую строку после строки массива
    }

    // Сортировка каждого столбца отдельно
    for(int col = 0; col < COLS; col++) {      // Проходим по каждому столбцу
        for(int i = 0; i < ROWS - 1; i++) {    // Внешний цикл пузырьковой сортировки (до предпоследней строки)
            for(int j = 0; j < ROWS - 1 - i; j++) {  // Внутренний цикл: сравниваем соседние элементы
                if(arr[j][col] > arr[j + 1][col]) {   // Если текущий элемент больше следующего
                    int temp = arr[j][col];           // Сохраняем текущий элемент во временную переменную
                    arr[j][col] = arr[j + 1][col];    // Перемещаем меньший элемент вверх
                    arr[j + 1][col] = temp;           // Помещаем больший элемент вниз
                }
            }
        }
    }

    printf("\nМассив ПОСЛЕ сортировки:\n");    // Выводим заголовок для отсортированного массива
    for(int i = 0; i < ROWS; i++) {            // Проходим по всем строкам
        for(int j = 0; j < COLS; j++) {        // Проходим по всем столбцам в строке
            printf("%4d ", arr[i][j]);         // Выводим элемент массива с выравниванием
        }
        printf("\n");                          // Переход на новую строку после строки массива
    }

    return 0;                                  // Завершаем программу успешно
}


#include <stdio.h>
#define CountDigits 10 //количество вводимых чисел

int main() {
    int i, n, temp, digits, divisor, mid1, mid2;

    for (i = 0; i < CountDigits; i++) {
        printf("Введите целое число %d: ", i + 1);
        scanf("%d", &n);

        if (n == 0) {
            printf("0\n");
            continue;
        }

        // Подсчёт количества цифр с помощью while
        temp = (n < 0 ? -n : n);  // Абсолютное значение
        digits = 0;
        while (temp > 0) {
            temp /= 10; //делим на десять на число, пока не будет 0 (temp у нас int, дробей не будет)
            digits++;
        }

        //printf("digits %d\n", digits);
       // printf("digits %d\n", digits/2);

        // Вычисление делителя для доступа к средним цифрам
        int countTen = digits / 2; //количество цифр делим на 2 и получим середину числа, если потом разделим его на 10 в степени получившегося числа, например 123 надо разделить на 10, а 1234 на 100
        int divisor = 1;
        while (countTen > 0) {
        	  divisor = divisor * 10;
                   countTen--;
               }
        //для 3 цифр в числе будет 10 (т.е. потом разделить число на 10 и взять остаток от деления и будет средняя цифра, например 123/10 = 12, затем 12 % 10 = 2 - остаток от деления)
        //для 4 цифр в числе будет 100 (т.е. потом разделить число на 100 и взять остаток от деления и будет средняя цифра, например 1234/100 = 12, затем 12 % 10 = 2 - остаток от деления)
        //															и вторую цифру посчитаем уменьшив делитель на 10: 1234/10 = 123, затем 123 % 10 = 3 - остаток от деления)


        //printf("divisor %d\n", divisor);

        // Получение средних цифр
        mid1 = (abs(n) / divisor) % 10;  // Первая средняя
        if (digits % 2 == 0) {
            mid2 = (abs(n) / (divisor / 10)) % 10;  // Вторая средняя для чётного
            printf("%d %d\n", mid1, mid2);
        } else {
            printf("%d\n", mid1);
        }
    }

    return 0;
}

